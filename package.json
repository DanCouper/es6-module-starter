{
  "name": "es6-module-starter",
  "version": "1.0.0",
  "description": "Boilerplate starter kit for ES2015+/Babel modules.",
  "main": "src/index.js",
  "scripts": {
    "ava": "ava",
    "compile": "babel src -d dist/index.js -s",
    "coverage": "nyc --reporter=lcov --reporter=text-lcov npm test",
    "coveralls": "cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js && rm -rf ./coverage",
    "lint": "eslint src/**/*.js",
    "plato": "plato -d coverage/plato dist/index.js",
    "test": "npm run coverage && npm run coveralls"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/DanCouper/es6-module-starter"
  },
  "keywords": [
    "es6",
    "es2015",
    "babel",
    "boilerplate",
    "starter",
    "ava",
    "nyc",
    "plato"
  ],
  "author": "Daniel Couper <danielcouper81@googlemail.com>",
  "license": "MIT",
  "devDependencies": {
    "ava": "^0.9.1",
    "babel-cli": "^6.3.17",
    "babel-core": "^6.3.26",
    "babel-eslint": "^5.0.0-beta6",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-stage-0": "^6.3.13",
    "coveralls": "^2.11.6",
    "eslint": "^1.10.3",
    "nyc": "^5.2.0",
    "plato": "github:deedubs/es6-plato"
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-0"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "rules": {
      "eol-last": [0],
      "no-mixed-requires": [0],
      "no-underscore-dangle": [0],
      "quotes": [2, "single"],
      "strict": 0
  }
}

